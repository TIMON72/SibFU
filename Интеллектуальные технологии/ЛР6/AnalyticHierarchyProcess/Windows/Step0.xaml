<UserControl x:Class="AnalyticHierarchyProcess.Windows.Step0"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnalyticHierarchyProcess.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid Loaded="Grid_Loaded" MinHeight="450" MinWidth="800">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DG_Criteria" Margin="0,0,0,60" CellEditEnding="DG_Criteria_CellEditEnding" HorizontalAlignment="Left" Width="400" />

        <Button x:Name="B_AddNewCriterion" Content="Добавить" Margin="0,0,0,40" HorizontalAlignment="Left" Width="80" Height="20" VerticalAlignment="Bottom" Click="B_AddNewCriterion_Click"/>
        <DataGrid x:Name="DG_Alternatives" Margin="0,0,0,60" HorizontalAlignment="Right" Width="395"/>
    </Grid>
</UserControl>
