<Window x:Class="AnalyticHierarchyProcess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnalyticHierarchyProcess"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize" MinWidth="600" MinHeight="400">
    <Grid>
        <ContentControl x:Name="Step" Margin="10,10,10,51" BorderBrush="Black" />
        <Border BorderThickness="1" BorderBrush="Black" Margin="10,10,10,51" />
        <Button x:Name="B_NextStep" Content="Далее" Margin="0,0,10,10" Click="B_NextStep_Click" HorizontalAlignment="Right" Width="100" Height="36" VerticalAlignment="Bottom"/>
        <Button x:Name="B_PreviousStep" Content="Назад" Margin="10,0,0,10" Click="B_PreviousStep_Click" Height="36" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="100"/>
    </Grid>
</Window>
